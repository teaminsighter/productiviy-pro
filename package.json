{
  "name": "productify-pro",
  "version": "0.1.0",
  "private": true,
  "description": "AI-Powered PC Monitoring & Productivity Tracking Application",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:desktop": "cd apps/desktop && npm run tauri:dev",
    "dev:backend": "cd apps/backend && python run.py",
    "build": "turbo run build",
    "build:desktop": "cd apps/desktop && npm run tauri:build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^1.11.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Productify Team",
  "license": "UNLICENSED"
}
