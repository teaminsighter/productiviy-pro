<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow the app to be sandboxed (required for App Store distribution) -->
    <!-- Set to false for direct distribution to allow full system access -->
    <key>com.apple.security.app-sandbox</key>
    <false/>

    <!-- Allow hardened runtime (required for notarization) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Allow unsigned executable memory (required for some features) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Allow dylib environment variables (required for some plugins) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Apple Events - Required to run AppleScript for activity tracking -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>

    <!-- Network access - Required for API communication -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- File access for storing data locally -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
</dict>
</plist>
