# ===========================================
# Productify Pro Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# App
DEBUG=true
APP_ENV=development
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ===========================================
# DATABASE - Choose ONE option
# ===========================================

# Option 1: SQLite (Local Development)
USE_SQLITE=true
DATABASE_PATH=~/.productify/data.db

# Option 2: Supabase PostgreSQL (Production)
# Get these from: https://supabase.com/dashboard → Settings → API
SUPABASE_URL=https://xxxxxxxxxxxx.supabase.co
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxxxxxxxxx.supabase.co:5432/postgres

# ===========================================
# FIREBASE STORAGE (Screenshots Cloud Storage)
# ===========================================
# Get these from: https://console.firebase.google.com
# → Project Settings → Service Accounts → Generate New Private Key

# Path to your Firebase service account JSON file
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# Your Firebase Storage bucket name
# Found in: Firebase Console → Storage → gs://your-bucket-name.appspot.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Google OAuth (optional - for user login)
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx

# Google Calendar Integration (for deep work analysis)
# Create OAuth credentials at: https://console.cloud.google.com/apis/credentials
# Enable Google Calendar API at: https://console.cloud.google.com/apis/library/calendar-json.googleapis.com
GOOGLE_REDIRECT_URI=http://localhost:8000/api/calendar/callback
GOOGLE_CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar.readonly https://www.googleapis.com/auth/calendar.events.readonly

# ===========================================
# SCREENSHOTS & TRACKING
# ===========================================
SCREENSHOTS_PATH=~/.productify/screenshots
ACTIVITYWATCH_URL=http://localhost:5600

# ===========================================
# AI & INTEGRATIONS (Optional)
# ===========================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Deepgram (Real-time transcription)
# Get API key from: https://console.deepgram.com
DEEPGRAM_API_KEY=

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_PERSONAL=price_xxx
STRIPE_PRICE_PRO=price_xxx
STRIPE_PRICE_TEAM=price_xxx

# ===========================================
# OTHER SETTINGS
# ===========================================
CORS_ORIGINS=http://localhost:1420,http://localhost:3000,tauri://localhost
REDIS_URL=redis://localhost:6379
SENTRY_DSN=
