# ===========================================
# Productify Pro Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# App
DEBUG=true
APP_ENV=development

# Database
# For PostgreSQL (production/cloud):
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/productify

# For SQLite (local development):
USE_SQLITE=true
DATABASE_PATH=~/.productify/data.db

# Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Screenshots
SCREENSHOTS_PATH=~/.productify/screenshots

# ActivityWatch (for desktop tracking)
ACTIVITYWATCH_URL=http://localhost:5600

# OpenAI (for AI insights - optional, users can add via UI)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Stripe (for payments - optional)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_PERSONAL=price_xxx
STRIPE_PRICE_PRO=price_xxx
STRIPE_PRICE_TEAM=price_xxx

# Google OAuth (optional)
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:1420,http://localhost:3000,tauri://localhost

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# Sentry (optional, for error tracking)
SENTRY_DSN=
